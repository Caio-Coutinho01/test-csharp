@model GestaoDeCandidatos.Models.ViewModels.CandidatesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.candidates.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.candidates.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.candidates.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.candidates.Email)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.listCandidates) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCandidate">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCandidate">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCandidate">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
